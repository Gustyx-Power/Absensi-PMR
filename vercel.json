{
    "version": 2,
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "admin/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "config/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "views/*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/(.*\\.php)",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}